<!-- Main section -->
<main id="main">
    <div class="error-container">
        <h1><%= status %> Error</h1>
        <div class="error-message">
            <p><%= message %></p>
            <% if(stack) { %>
                <pre class="error-stack"><%= stack %></pre>
            <% } %>
        </div>
        <div class="error-actions">
            <a href="/" class="btn-home">Go to Home</a>
        </div>
    </div>
</main>
<!-- End main section -->
